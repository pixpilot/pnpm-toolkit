{
  "name": "plop-templates",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixpilot/pnpm-toolkit.git"
  },
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=9.6.0"
  },
  "scripts": {
    "prepare": "husky",
    "preinstall": "npx only-allow pnpm",
    "build": "turbo run build",
    "tsc:watch": "tsc --noEmit --watch --project tsconfig.watch.json",
    "format": "turbo run format --continue -- --cache --cache-location .cache/.prettiercache",
    "format:fix": "turbo run format --continue -- --write --cache --cache-location .cache/.prettiercache",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "test": "turbo run test",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "turbo run typecheck",
    "clean:packages": "node scripts/cleanup-node-modules.js",
    "clean:packages:install": "pnpm clean:packages && pnpm install",
    "clean:workspaces": "turbo run clean",
    "deps:update": "npx taze -r -w && pnpm install",
    "deps:update:major": "npx taze major -r -w && pnpm install",
    "clean:workspaces:install": "pnpm clean:workspaces && pnpm install",
    "turbo:gen:init": "pnpm --filter ./packages/pnpm-workspace-package-generator build && pnpm turbo gen init",
    "release": "pnpm changeset"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@internal/prettier-config": "workspace:*",
    "@pixpilot/dev-config": "catalog:dev",
    "@turbo/gen": "^2.5.5",
    "@vitest/coverage-v8": "catalog:dev",
    "@vitest/ui": "catalog:dev",
    "eslint": "catalog:dev",
    "handlebars": "^4.7.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "node-plop": "^0.32.0",
    "plop": "^4.0.1",
    "prettier": "catalog:dev",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "turbo": "^2.5.5",
    "typescript": "catalog:dev",
    "vitest": "catalog:dev"
  },
  "prettier": "@internal/prettier-config"
}
